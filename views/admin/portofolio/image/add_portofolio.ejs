<div class="left-arrow mb-3">
    <a href="/admin/portofolio/image"><i class="fas fa-arrow-left"></i></a>
</div>
<div class="card shadow mb-4 mt-2">
    <div class="card-body">
        <form action="/admin/portofolio-image" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <label for="name">Title of Portofolio :</label>
                <input type="text" class="form-control " name="name" placeholder="Enter Title of Portofolio" required>
            </div>
            <div class="form-group">
                <label for="year">Year :</label>
                <input type="number" class="form-control" name="year" placeholder="Enter Year" required>
            </div>
            <div class="form-group">
                <label for="name">Image :</label>
                <input type="file" class="form-control" name="image" required>
            </div>
            <div class="form-footer">
                <button type="submit" class="btn btn-primary">Add</button>
            </div>
        </form>
    </div>
</div>