<div class="left-arrow mb-3">
    <a href="/admin/portofolio/image"><i class="fas fa-arrow-left"></i></a>
</div>
<div class="card shadow mb-4 mt-2">
    <div class="card-body">
        <form action="/admin/portofolio-image/<%= image.id %>?_method=PUT" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <label for="name">Title of Portofolio :</label>
                <input type="text" class="form-control " name="name" value="<%= image.name %>" placeholder="Enter Title of Portofolio" required>
            </div>
            <div class="form-group">
                <label for="year">Year :</label>
                <input type="number" class="form-control" name="year" value="<%= image.year %>" placeholder="Enter Year" required>
            </div>
            <div class="form-group">
                <label for="name">Image :</label>
                <input type="file" class="form-control" name="image">
            </div>
            <div class="form-group">
                <label>Image now :</label>
                <div class="row">
                    <div class="col-sm-4">
                        <img src="https://app-badilz.herokuapp.com/<%- image.imageUrl %>" alt="image-<%= image.id %>" style="width: 100%; height: 300px; object-fit: cover;">
                    </div>
                </div>
            </div>
            <div class="form-footer">
                <input type="hidden" class="id" name="id" value="<%= image._id %>">
                <button type="submit" class="btn btn-primary">Add</button>
            </div>
        </form>
    </div>
</div>